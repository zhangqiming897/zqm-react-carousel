{
  "compilerOptions": {
    "jsx": "react",
    "module": "CommonJS",
    "target": "ES5",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/*", "src/**/*/.tsx"],
  "exclude": ["node_modules", "dist", "lib", "config", "test"]
}
