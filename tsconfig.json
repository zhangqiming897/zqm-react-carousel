{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2018",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/*", "src/**/*/.tsx"],
  "exclude": ["node_modules", "dist", "lib", "config", "test"]
}
